.house{
  border-bottom: 0.5rpx solid #ebebeb;
  /* box-shadow: 0rpx 0rpx 0.1rpx 0rpx #2B2F33; */
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  
}
.house image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
}
.house-info{
  letter-spacing: 2rpx;
  font-size: 24rpx;
  color: #2B2F33;
  margin-left: 30rpx;
  margin-top: 30rpx;
  text-align: left;
  padding: 10rpx;
}
.house-info text:nth-child(2){
  display: block;
  margin-top: 10rpx;
  color: #cbcbcb;
}
.space{
  height: 20rpx;
  background-color: #ebebeb;
}
.status{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  font-size: 24rpx;
}
.time{
  display: flex;
  justify-content: space-between;
  padding: 0rpx 30rpx 30rpx;
  font-size: 24rpx;
  color: green;
  border-bottom: 0.5rpx solid #ebebeb;
}
.line{
  color: #2B2F33;
  font-size: 16rpx;
}
.house-count{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #5e646b;
  padding: 30rpx;
  border-bottom: 0.5rpx solid #ebebeb;
}
.picker{
  width: 500rpx;
  text-align: right;
}
.message{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #5e646b;
  padding: 30rpx;
  border-bottom: 0.5rpx solid #ebebeb;
}
.message input{
  width: 500rpx;
  text-align: right;
  
}
.live-people{
  display: block;
}
.house-price{
  border: 1px solid red;
  height: 93rpx;
}
.hide{
  overflow: hidden;
}
.show{
  overflow: visible;
}
.arrow{
  display: inline-block;
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 30rpx;
  height: 20rpx;
}
.price-info{
  /* height: 150rpx; */
  background-color: #ebebeb;
  font-size: 24rpx;
  color: #5e646b;
  padding: 10rpx 30rpx;
}
.count{
  border-bottom: 0.5rpx solid #fff;
}
.price-info-nav{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.price-info-nav view{
  text-align: center;
}
 .price-info-nav text{
   display: block;
   text-align: center
 }
.payto{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #5e646b;
  padding: 10rpx 30rpx;
}
.payto text:nth-child(2){
  color: red;
}

.pay{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #5e646b;
  padding: 10rpx 80rpx;
}
.pay text{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: black;
}
.pay button{
  width: 250rpx;
  background-color: #20C673;
  color: white;
}
.spaceall{
  height: 80rpx;
  background-color: #ebebeb;
}
.bg-status{
  color: red
}
.bigBg{
  width: 100%;
  height: 1300rpx;
  background: rgb(250, 255, 250);
  box-sizing: border-box;
  padding: 24rpx;
}
.bigBg text{
  font-size: 14px;
  color: rgb(63, 63, 63);
  display: block;
  margin-top: 20rpx;
  margin-left: 12rpx;
}
textarea{
  display: block;
  width: 100%;
  height: 240rpx;
   box-sizing: border-box;
  margin-top: 30rpx;
  padding: 12rpx;
  border: 1px solid rgb(235, 235, 235);
  font-size: 12px;
}
.phsize{
  font-size: 12px;
  margin-left: 10px;
  color: rgb(172, 172, 172)
}
button{
  background: rgb(61,179,129);
  font-size: 14px;
  color: #fff;
  margin-top: 100rpx;
}
